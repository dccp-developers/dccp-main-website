        </a>
      </nav>
      
      <!-- Footer -->
      <div class="p-4 border-t">
        {online_enrollment_enabled ? (
          <a href="https://portal.dccp.edu.ph/enroll" class="block w-full py-2 px-3 bg-primary text-primary-foreground text-center rounded-md mb-4">
            Enroll Now
