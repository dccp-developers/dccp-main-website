<script>
  // Initialize animations when the DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    // Add hover effect to the 3D panel
    const container = document.querySelector('.perspective-container');
    const panel = document.querySelector('.ui-panel');

    if (container && panel) {
      container.addEventListener('mousemove', (e) => {
        const rect = container.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;

        const centerX = rect.width / 2;
        const centerY = rect.height / 2;

        const rotateY = ((x - centerX) / centerX) * 5;
        const rotateX = ((centerY - y) / centerY) * 5;

        panel.style.transform = `rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
      });

      container.addEventListener('mouseleave', () => {
        panel.style.transform = 'rotateX(2deg) rotateY(-2deg)';
      });
    }

    // Animate count-up numbers
    const countElements = document.querySelectorAll('.count-up');

    countElements.forEach(el => {
      const target = parseInt(el.textContent, 10);
      let count = 0;
      const duration = 2000; // 2 seconds
      const frameDuration = 1000 / 60; // 60fps
      const totalFrames = Math.round(duration / frameDuration);
      const increment = target / totalFrames;

      const counter = setInterval(() => {
        count += increment;
        if (count >= target) {
          el.textContent = target;
          clearInterval(counter);
        } else {
          el.textContent = Math.floor(count);
        }
      }, frameDuration);
    });
  });
</script>
