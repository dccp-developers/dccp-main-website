---
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
---

<section class="relative overflow-hidden min-h-[90vh] flex items-center">
  <!-- Background elements -->
  <div class="absolute inset-0 -z-10">
    <!-- Dark background with noise texture -->
    <div class="absolute inset-0 bg-background dark:bg-zinc-950"></div>

    <!-- Diagonal split background -->
    <div class="absolute inset-0 bg-gradient-to-tr from-primary/5 via-transparent to-transparent"></div>

    <!-- Noise texture overlay -->
    <div class="absolute inset-0 bg-noise-pattern opacity-[0.15] mix-blend-soft-light"></div>

    <!-- Animated gradient blobs -->
    <div class="absolute top-0 right-0 w-[800px] h-[800px] rounded-full radial-gradient-primary opacity-20 blur-3xl animate-blob"></div>
    <div class="absolute bottom-0 left-0 w-[600px] h-[600px] rounded-full radial-gradient-secondary opacity-10 blur-3xl animate-blob-delay"></div>

    <!-- Geometric shapes -->
    <div class="absolute top-[20%] left-[10%] w-16 h-16 border border-primary/20 rounded-lg rotate-[10deg] animate-float-slow opacity-30"></div>
    <div class="absolute bottom-[30%] right-[15%] w-24 h-24 border border-primary/20 rounded-full animate-float-delay opacity-20"></div>
    <div class="absolute top-[60%] left-[20%] w-12 h-12 bg-primary/5 rounded-md rotate-[25deg] animate-float opacity-40"></div>
  </div>

  <div class="container relative z-10">
    <!-- Asymmetrical split layout -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-4 items-center">
      <!-- Left column: Content (spans 5 columns on large screens) -->
      <div class="lg:col-span-5 lg:pr-8 space-y-8">
        <!-- Portal label with animated line -->
        <div class="flex items-center gap-3 slide-in-left opacity-0" style="--slide-delay: 0.1s;">
          <div class="h-px w-12 bg-primary"></div>
          <span class="text-sm uppercase tracking-widest text-primary font-medium">Academic Portal</span>
        </div>

        <!-- Main heading with split design -->
        <div class="space-y-3">
          <h1 class="text-5xl md:text-7xl font-bold tracking-tight split-text-reveal opacity-0" style="--split-delay: 0.2s;">
            <span class="block">DCCP<span class="text-primary">Hub</span></span>
          </h1>

          <p class="text-xl md:text-2xl text-muted-foreground font-light fade-in-up opacity-0" style="--fade-delay: 0.5s;">
            The next generation learning platform for students and educators
          </p>
        </div>

        <!-- Feature cards with hover effects -->
        <div class="grid grid-cols-2 gap-4 pt-4 fade-in-up opacity-0" style="--fade-delay: 0.7s;">
          <!-- Feature 1 -->
          <div class="feature-card group p-4 rounded-xl border border-border/40 bg-card/30 backdrop-blur-sm hover:border-primary/30 hover:bg-card/50 transition-all duration-300">
            <div class="flex flex-col gap-3">
              <div class="h-10 w-10 rounded-lg bg-primary/10 flex items-center justify-center text-primary group-hover:bg-primary/20 transition-colors duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"></path></svg>
              </div>
              <div>
                <h3 class="font-medium">Course Management</h3>
                <p class="text-xs text-muted-foreground mt-1">Access all your courses and materials</p>
              </div>
            </div>
          </div>

          <!-- Feature 2 -->
          <div class="feature-card group p-4 rounded-xl border border-border/40 bg-card/30 backdrop-blur-sm hover:border-primary/30 hover:bg-card/50 transition-all duration-300">
            <div class="flex flex-col gap-3">
              <div class="h-10 w-10 rounded-lg bg-primary/10 flex items-center justify-center text-primary group-hover:bg-primary/20 transition-colors duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 12h-4l-3 9L9 3l-3 9H2"></path></svg>
              </div>
              <div>
                <h3 class="font-medium">Grade Tracking</h3>
                <p class="text-xs text-muted-foreground mt-1">Monitor your academic performance</p>
              </div>
            </div>
          </div>

          <!-- Feature 3 -->
          <div class="feature-card group p-4 rounded-xl border border-border/40 bg-card/30 backdrop-blur-sm hover:border-primary/30 hover:bg-card/50 transition-all duration-300">
            <div class="flex flex-col gap-3">
              <div class="h-10 w-10 rounded-lg bg-primary/10 flex items-center justify-center text-primary group-hover:bg-primary/20 transition-colors duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"></rect><line x1="16" x2="16" y1="2" y2="6"></line><line x1="8" x2="8" y1="2" y2="6"></line><line x1="3" x2="21" y1="10" y2="10"></line></svg>
              </div>
              <div>
                <h3 class="font-medium">Schedule</h3>
                <p class="text-xs text-muted-foreground mt-1">Manage your academic calendar</p>
              </div>
            </div>
          </div>

          <!-- Feature 4 -->
          <div class="feature-card group p-4 rounded-xl border border-border/40 bg-card/30 backdrop-blur-sm hover:border-primary/30 hover:bg-card/50 transition-all duration-300">
            <div class="flex flex-col gap-3">
              <div class="h-10 w-10 rounded-lg bg-primary/10 flex items-center justify-center text-primary group-hover:bg-primary/20 transition-colors duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg>
              </div>
              <div>
                <h3 class="font-medium">Communication</h3>
                <p class="text-xs text-muted-foreground mt-1">Connect with peers and teachers</p>
              </div>
            </div>
          </div>
        </div>

        <!-- CTA Buttons with modern design -->
        <div class="flex flex-col sm:flex-row gap-4 pt-4 fade-in-up opacity-0" style="--fade-delay: 0.9s;">
          <Button size="lg" className="relative group overflow-hidden bg-gradient-to-r from-primary to-primary/90 hover:from-primary/90 hover:to-primary transition-all duration-500">
            <span class="relative z-10 flex items-center gap-2">
              <span>Access Portal</span>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform duration-300 group-hover:translate-x-1"><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg>
            </span>
          </Button>

          <Button variant="outline" size="lg" className="group border-primary/20 hover:border-primary/40 transition-colors duration-300">
            <span class="flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><circle cx="12" cy="12" r="10"></circle><polygon points="10 8 16 12 10 16 10 8"></polygon></svg>
              <span>Watch Demo</span>
            </span>
          </Button>
        </div>
      </div>

      <!-- Right column: Interactive UI showcase (spans 7 columns on large screens) -->
      <div class="lg:col-span-7 relative">
        <!-- Interactive UI showcase with 3D perspective -->
        <div class="relative perspective-container fade-in-right opacity-0" style="--fade-delay: 0.3s;">
          <!-- Main UI panel with 3D effect -->
          <div class="ui-panel relative bg-card rounded-2xl border border-border/50 shadow-2xl overflow-hidden transform-3d">
            <!-- UI Header with tabs -->
            <div class="flex items-center justify-between px-6 py-4 bg-muted/30 border-b border-border/50">
              <!-- App logo -->
              <div class="flex items-center gap-2">
                <div class="h-8 w-8 rounded-lg bg-primary/20 flex items-center justify-center text-primary">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 10v6M2 10l10-5 10 5-10 5z"/><path d="M6 12v5c3 3 9 3 12 0v-5"/></svg>
                </div>
                <span class="font-semibold text-sm">DCCPHub</span>
              </div>

              <!-- Tabs -->
              <div class="flex items-center gap-1">
                <button class="px-3 py-1.5 text-sm rounded-md bg-primary text-primary-foreground">Dashboard</button>
                <button class="px-3 py-1.5 text-sm rounded-md text-muted-foreground hover:bg-muted/50 transition-colors">Courses</button>
                <button class="px-3 py-1.5 text-sm rounded-md text-muted-foreground hover:bg-muted/50 transition-colors">Calendar</button>
              </div>

              <!-- User menu -->
              <div class="flex items-center gap-3">
                <button class="relative">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"/><path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"/></svg>
                  <span class="absolute -top-1 -right-1 h-4 w-4 rounded-full bg-primary text-[10px] text-primary-foreground flex items-center justify-center">3</span>
                </button>
                <div class="h-8 w-8 rounded-full bg-primary/10 flex items-center justify-center text-primary font-medium text-sm">
                  JS
                </div>
              </div>
            </div>

            <!-- UI Content -->
            <div class="p-6">
              <!-- Welcome section -->
              <div class="flex items-center justify-between mb-6">
                <div>
                  <h2 class="text-xl font-bold">Welcome back, John!</h2>
                  <p class="text-sm text-muted-foreground">Here's what's happening today</p>
                </div>
                <div class="text-sm text-muted-foreground">
                  <span class="font-medium">Monday,</span> September 18, 2023
                </div>
              </div>

              <!-- Stats cards -->
              <div class="grid grid-cols-3 gap-4 mb-6">
                <div class="bg-muted/30 rounded-xl p-4 border border-border/50">
                  <div class="flex items-center justify-between mb-2">
                    <span class="text-sm text-muted-foreground">Courses</span>
                    <div class="h-6 w-6 rounded-md bg-primary/10 flex items-center justify-center text-primary">
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"></path></svg>
                    </div>
                  </div>
                  <div class="text-2xl font-bold">6</div>
                </div>

                <div class="bg-muted/30 rounded-xl p-4 border border-border/50">
                  <div class="flex items-center justify-between mb-2">
                    <span class="text-sm text-muted-foreground">Assignments</span>
                    <div class="h-6 w-6 rounded-md bg-primary/10 flex items-center justify-center text-primary">
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/><polyline points="14 2 14 8 20 8"/></svg>
                    </div>
                  </div>
                  <div class="text-2xl font-bold">12</div>
                </div>

                <div class="bg-muted/30 rounded-xl p-4 border border-border/50">
                  <div class="flex items-center justify-between mb-2">
                    <span class="text-sm text-muted-foreground">GPA</span>
                    <div class="h-6 w-6 rounded-md bg-primary/10 flex items-center justify-center text-primary">
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 12h-4l-3 9L9 3l-3 9H2"/></svg>
                    </div>
                  </div>
                  <div class="text-2xl font-bold">3.8</div>
                </div>
              </div>

              <!-- Upcoming classes -->
              <div class="mb-6">
                <h3 class="text-sm font-medium mb-3">Today's Classes</h3>
                <div class="space-y-3">
                  <!-- Class 1 -->
                  <div class="flex items-center gap-3 p-3 rounded-lg border border-border/50 bg-muted/20">
                    <div class="h-10 w-10 rounded-md bg-primary/10 flex items-center justify-center text-primary shrink-0">
                      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                    </div>
                    <div class="flex-1">
                      <div class="flex items-center justify-between">
                        <h4 class="font-medium">Computer Science 101</h4>
                        <span class="text-xs text-muted-foreground">9:00 AM - 10:30 AM</span>
                      </div>
                      <p class="text-xs text-muted-foreground">Room 305 • Prof. Martinez</p>
                    </div>
                  </div>

                  <!-- Class 2 -->
                  <div class="flex items-center gap-3 p-3 rounded-lg border border-border/50 bg-muted/20">
                    <div class="h-10 w-10 rounded-md bg-primary/10 flex items-center justify-center text-primary shrink-0">
                      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                    </div>
                    <div class="flex-1">
                      <div class="flex items-center justify-between">
                        <h4 class="font-medium">Mathematics 202</h4>
                        <span class="text-xs text-muted-foreground">11:00 AM - 12:30 PM</span>
                      </div>
                      <p class="text-xs text-muted-foreground">Room 210 • Prof. Johnson</p>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Placeholder for more content -->
              <img
                src="https://placehold.co/800x100/2563eb/FFFFFF/png?text=More+Dashboard+Content"
                alt="More Dashboard Content"
                class="w-full h-auto rounded-lg"
              />
            </div>
          </div>

          <!-- Floating notification -->
          <div class="absolute -top-4 -right-4 bg-card rounded-lg shadow-lg border border-border/50 p-3 max-w-[220px] animate-float z-20">
            <div class="flex items-start gap-2">
              <div class="h-8 w-8 rounded-full bg-primary/20 flex items-center justify-center text-primary shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/><polyline points="14 2 14 8 20 8"/></svg>
              </div>
              <div>
                <p class="text-xs font-medium">New Assignment Added</p>
                <p class="text-xs text-muted-foreground mt-1">Programming Project - Due Friday</p>
                <div class="flex items-center gap-2 mt-2">
                  <button class="text-[10px] px-2 py-0.5 rounded bg-primary text-primary-foreground">View</button>
                  <button class="text-[10px] px-2 py-0.5 rounded bg-muted text-muted-foreground">Dismiss</button>
                </div>
              </div>
            </div>
          </div>

          <!-- Mobile app preview -->
          <div class="absolute -bottom-6 -right-6 z-10 animate-float-delay">
            <div class="relative w-[120px] h-[240px] bg-background rounded-[2rem] border-8 border-foreground/10 shadow-xl overflow-hidden">
              <div class="absolute top-0 inset-x-0 h-6 bg-foreground/10 rounded-t-2xl"></div>
              <div class="absolute top-2 inset-x-0 h-1 w-10 mx-auto bg-foreground/20 rounded-full"></div>
              <div class="h-full w-full overflow-hidden pt-6">
                <img
                  src="https://placehold.co/240x480/2563eb/FFFFFF/png?text=Mobile+App"
                  alt="DCCPHub Mobile App"
                  class="w-full h-full object-cover"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Interactive stats bar with hover effects -->
    <div class="mt-16 lg:mt-20 fade-in-up opacity-0" style="--fade-delay: 1.1s;">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="stat-card group p-6 rounded-xl border border-border/40 bg-card/30 backdrop-blur-sm hover:border-primary/30 hover:bg-card/50 transition-all duration-300 text-center">
          <div class="flex flex-col items-center">
            <div class="h-12 w-12 rounded-full bg-primary/10 flex items-center justify-center text-primary mb-4 group-hover:scale-110 transition-transform duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 12h-4l-3 9L9 3l-3 9H2"/></svg>
            </div>
            <span class="text-3xl font-bold text-primary count-up">100</span>
            <span class="text-sm text-muted-foreground mt-1">% Online Access</span>
          </div>
        </div>

        <div class="stat-card group p-6 rounded-xl border border-border/40 bg-card/30 backdrop-blur-sm hover:border-primary/30 hover:bg-card/50 transition-all duration-300 text-center">
          <div class="flex flex-col items-center">
            <div class="h-12 w-12 rounded-full bg-primary/10 flex items-center justify-center text-primary mb-4 group-hover:scale-110 transition-transform duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
            </div>
            <div class="flex items-center justify-center">
              <span class="text-3xl font-bold text-primary count-up">24</span>
              <span class="text-3xl font-bold text-primary">/7</span>
            </div>
            <span class="text-sm text-muted-foreground mt-1">Availability</span>
          </div>
        </div>

        <div class="stat-card group p-6 rounded-xl border border-border/40 bg-card/30 backdrop-blur-sm hover:border-primary/30 hover:bg-card/50 transition-all duration-300 text-center">
          <div class="flex flex-col items-center">
            <div class="h-12 w-12 rounded-full bg-primary/10 flex items-center justify-center text-primary mb-4 group-hover:scale-110 transition-transform duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
            </div>
            <span class="text-3xl font-bold text-primary count-up">1000</span>
            <span class="text-sm text-muted-foreground mt-1">Active Users</span>
          </div>
        </div>

        <div class="stat-card group p-6 rounded-xl border border-border/40 bg-card/30 backdrop-blur-sm hover:border-primary/30 hover:bg-card/50 transition-all duration-300 text-center">
          <div class="flex flex-col items-center">
            <div class="h-12 w-12 rounded-full bg-primary/10 flex items-center justify-center text-primary mb-4 group-hover:scale-110 transition-transform duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"/></svg>
            </div>
            <span class="text-3xl font-bold text-primary count-up">95</span>
            <span class="text-sm text-muted-foreground mt-1">% Satisfaction Rate</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Background patterns */
  .bg-noise-pattern {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
  }

  /* Gradient backgrounds */
  .radial-gradient-primary {
    background: radial-gradient(circle at center, var(--primary) 0%, transparent 70%);
  }

  .radial-gradient-secondary {
    background: radial-gradient(circle at center, var(--primary) 0%, transparent 70%);
  }

  /* 3D transforms */
  .perspective-container {
    perspective: 1500px;
  }

  .transform-3d {
    transform: rotateX(2deg) rotateY(-2deg);
    transform-style: preserve-3d;
    transition: transform 0.5s ease;
  }

  .perspective-container:hover .transform-3d {
    transform: rotateX(0deg) rotateY(0deg);
  }

  /* Animation keyframes */
  @keyframes fade-in-up {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-in-right {
    0% {
      opacity: 0;
      transform: translateX(30px);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slide-in-left {
    0% {
      opacity: 0;
      transform: translateX(-30px);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes split-text-reveal {
    0% {
      opacity: 0;
      transform: translateY(40px);
      filter: blur(10px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
      filter: blur(0);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes blob {
    0%, 100% {
      border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
      transform: translate(0, 0) rotate(0deg);
    }
    33% {
      border-radius: 70% 30% 50% 50% / 30% 30% 70% 70%;
      transform: translate(5px, 5px) rotate(5deg);
    }
    66% {
      border-radius: 100% 60% 60% 100% / 100% 100% 60% 60%;
      transform: translate(-5px, 5px) rotate(-5deg);
    }
  }

  /* Apply animations */
  .fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
    animation-delay: var(--fade-delay, 0s);
  }

  .fade-in-right {
    animation: fade-in-right 0.8s ease-out forwards;
